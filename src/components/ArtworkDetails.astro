---
import Card from './Card.astro';

interface Props {
	artwork: {
		artistDisplayName: string;
		title: string;
		objectDate: string;
		medium?: string;
		dimensions?: string;
		galleryNumber?: string;
		objectID: number;
	};
}

const { artwork } = Astro.props;
---

<Card>
	<div class="text-gray-warm-100 space-y-2" data-pagefind-body>
		<p class="text-xs text-gray-warm-200">
			{artwork.artistDisplayName || 'Unknown Artist'}
		</p>

		<h1 class="text-sm text-gray-warm-100">
			{artwork.title || 'Untitled'}{artwork.objectDate ? `, ${artwork.objectDate}` : ''}
		</h1>

		{artwork.medium && (
			<p class="text-xs text-gray-warm-300">{artwork.medium}</p>
		)}

		{artwork.dimensions && (
			<p class="text-xs text-gray-warm-300">{artwork.dimensions}</p>
		)}

		{artwork.galleryNumber && (
			<p class="text-xs text-gray-warm-200">Gallery {artwork.galleryNumber}</p>
		)}

		<p class="mt-3" data-pagefind-ignore>
			<a
				href={`https://www.metmuseum.org/art/collection/search/${artwork.objectID}`}
				class="text-blue-400/90 hover:text-blue-300 underline transition-colors text-xs"
			>
				View on metmuseum.org &rarr;
			</a>
		</p>
	</div>
</Card>
