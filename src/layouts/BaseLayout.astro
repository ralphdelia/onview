---
import NavBar from '../components/NavBar.astro';
import '../styles/global.css';

interface Props {
	title?: string;
	description?: string;
	image?: string;
	url?: string;
}

const { title, description, image, url } = Astro.props;

const pageTitle = title ?? 'OnView';
const pageDescription =
	description ??
	"Discover visually similar paintings from the Metropolitan Museum of Art's collection";
const pageImage = image ?? 'https://onview.dev/static/og-image.jpg';
const pageUrl = url ?? 'https://onview.dev';
---

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta http-equiv="X-UA-Compatible" content="ie=edge" />
		<title>{pageTitle}</title>
		<meta name="description" content={pageDescription} />

		<!-- Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400..700;1,400..700&display=swap"
			rel="stylesheet"
		/>

		<!-- DNS Prefetch and Preconnect for image CDN -->
		<link rel="dns-prefetch" href="https://images.onview.dev" />
		<link rel="preconnect" href="https://images.onview.dev" crossorigin />

		<!-- Allow pages to inject additional head elements -->
		<slot name="head" />

		<!-- Structured Data for WebSite -->
		<script type="application/ld+json" set:html={JSON.stringify({
			"@context": "https://schema.org",
			"@type": "WebSite",
			"name": "OnView",
			"description": pageDescription,
			"url": "https://onview.dev"
		})} />

		<meta property="og:title" content={pageTitle} />
		<meta property="og:description" content={pageDescription} />
		<meta property="og:image" content={pageImage} />
		<meta property="og:url" content={pageUrl} />
		<meta property="og:type" content="website" />
		<meta property="og:site_name" content="OnView" />

		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={pageTitle} />
		<meta name="twitter:description" content={pageDescription} />
		<meta name="twitter:image" content={pageImage} />

		<link rel="canonical" href={pageUrl} />
		<meta name="theme-color" content="#ff7700" />
		<link
			rel="icon"
			href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>üñºÔ∏è</text></svg>"
		/>
		<link
			href="https://fonts.googleapis.com/icon?family=Material+Icons"
			rel="stylesheet"
		/>
	</head>
	<body class="bg-gray-warm-950 min-h-screen p-4 font-sans font">
		<!-- Content that needs to escape max-width constraint -->
		<slot name="outside" />

		<div
			class="w-full max-w-6xl mx-auto min-h-[calc(100vh-2rem)] flex flex-col"
		>
			<div class="shrink-0">
				<NavBar />
			</div>
			<main class="grow">
				<slot />
			</main>
		<footer class="mt-8 pt-4 border-t border-gray-warm-800 shrink-0">
			<p class="text-center text-gray-warm-500 text-sm">
				¬© {new Date().getFullYear()} OnView ‚Ä¢ made by <a href="https://ralphdelia.com" target="_blank" rel="noopener noreferrer" class="text-gray-warm-300 underline hover:text-gray-warm-100 transition-colors">Ralph</a>
			</p>
		</footer>
		</div>

		<script>
			import { navigateToRandomArtwork } from '../scripts/random-artwork';
			(window as any).navigateToRandomArtwork = navigateToRandomArtwork;
		</script>

		<script
			is:inline
			defer
			src="https://static.cloudflareinsights.com/beacon.min.js"
			data-cf-beacon='{"token": "be205c65613a4ea6be3e2d694aae2db5"}'></script>
	</body>
</html>
